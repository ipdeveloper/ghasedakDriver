<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mainLayout"
    android:id="@+id/main_layout"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_ripple"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/icon_of_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/school_or_street_name"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_search_location"/>
    <TextView
        android:id="@+id/school_or_street_name"
        android:layout_toEndOf="@id/icon_of_search"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="34dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:background="@color/transparent"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/iran_sans_light"
        />
    <TextView
        android:id="@+id/school_or_street_details"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/icon_of_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/light_gray"
        android:layout_below="@id/school_or_street_name"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:fontFamily="@font/iran_sans_light"
        android:singleLine="true"
        android:focusableInTouchMode="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="42dp"
        android:background="@color/dark_gray"
        android:layout_below="@id/school_or_street_details"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"/>

</RelativeLayout>